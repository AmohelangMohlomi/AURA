@page "/aura-ai"
@inject AuraAiService Aura

<h1>AURA</h1>

<h2>Looks like it's time for some therapy, I got you my babes </h2>

<p>How are you feeling today ma'am?</p>

<textarea @bind="userMessage"></textarea>
<button @onclick="Ask">Ask</button>

@if (!string.IsNullOrEmpty(response))
{
    <p><strong>AURA:</strong> @response</p>
}

@code {
    string userMessage = "";
    string response = "";

    async Task Ask()
    {
        response = await Aura.AskAura(userMessage);
    }
}
